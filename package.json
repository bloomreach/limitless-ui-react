{
  "name": "@bloomreach/limitless-ui-react",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloomreach/limitless-ui-react.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "prepare": "husky",
    "test": "vitest --run --coverage.enabled",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "generate": "plop --plopfile ./generators/plopfile.js --dest .",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "pnpm build && storybook build",
    "e2e:internal": "E2E=true pnpm storybook:build && playwright test",
    "e2e:watch": "docker compose up --watch --exit-code-from playwright-e2e",
    "e2e:update": "docker compose run -e UPDATE_SNAPSHOTS=--update-snapshots playwright-e2e",
    "e2e:report": "playwright show-report",
    "e2e": "docker compose up --remove-orphans --exit-code-from playwright-e2e"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.25",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-direction": "^1.1.0",
    "@radix-ui/react-form": "^0.1.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-toolbar": "^1.1.0",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "@bloomreach/discovery-web-sdk": "^1.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^2.0.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@faker-js/faker": "^9.0.3",
    "@playwright/test": "^1.48.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^8.3.6",
    "@storybook/addon-actions": "^8.3.6",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/addon-storysource": "^8.3.6",
    "@storybook/addon-viewport": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/cli": "^8.3.6",
    "@storybook/manager-api": "^8.3.6",
    "@storybook/preview-api": "~8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/theming": "^8.3.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.16.14",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-istanbul": "^2.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.13",
    "eslint-plugin-storybook": "^0.8.0",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "msw": "^2.5.0",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "sass": "^1.80.3",
    "semantic-release": "^24.1.3",
    "storybook": "^8.3.6",
    "typescript": "~5.5.4",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
  "pnpm": {
    "overrides": {
      "rollup@>=4.0.0 <4.22.4": ">=4.22.4",
      "cookie@<0.7.0": ">=0.7.0"
    }
  }
}
